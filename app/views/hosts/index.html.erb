<div class="container" id="bump-down">
  <div class="row">
    <div class="col-lg-12">
      <!-- Form Name -->
      <legend>All the hosts.</legend>
    </div>
    <div class="col-lg-5">

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Smokes</th>
      <th>Dogs</th>
      <th>Cats</th>
      <th>Bedding</th>
      <th>Towels</th>
      <th>Capacity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hosts.each do |host| %>
      <tr>
        <td><%= host.name %></td>
        <td><%= host.smokes %></td>
        <td><%= host.dogs %></td>
        <td><%= host.cats %></td>
        <td><%= host.bedding %></td>
        <td><%= host.towels %></td>
        <td><%= host.capacity %></td>
        <td><%= link_to 'Show', host %></td>
        <td><%= link_to 'Edit', edit_host_path(host) %></td>
        <td><%= link_to 'Destroy', host, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Host', new_host_path %>
<%= link_to 'Home', root_path %>

</div>
</div>
