<div class="container-fluid">
  <div class="row">
    <div class="col-lg-6">
      <h2>All the hosts.</h2>
      <div class="table-responsive">
          <table class="table table-bordered table-hover table-striped">
              <thead>
                  <tr>
                      <th>Host</th>
                      <th>Smokes?</th>
                      <th>Allergies</th>
                      <th>Bedding & Towels</th>
                      <th></th>
                      <th></th>
                  </tr>
              </thead>
              <tbody>
                  <% @hosts.each do |host| %>
                  <tr>
                      <td><%= link_to host.name, host %></td>
                      <td><%= host.smokes %></td>
                      <td><%= host.dogs %> & <%= host.cats %></td>
                      <td><%= host.bedding %> & <%= host.towels %></td>
                      <td><%= link_to 'Edit', edit_host_path(host) %></td>
                      <td><%= link_to 'Destroy', host, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                  <% end %>
              </tbody>
          </table>
      </div>
    </div>
  </div>
</div>
