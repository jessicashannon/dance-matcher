<div class="container" id="bump-down">
  <div class="row">
    <div class="col-lg-12">
      <!-- Form Name -->
      <legend>I want to host.</legend>
    </div>
    <div class="col-lg-5">
      <fieldset>

      <%= form_for(@host, url: {action: "create"}, :html => { :class => "form-horizontal" }) do |f| %>
      <!-- Text input-->
      <div class="form-group">
        <label class="col-md-4 control-label" for="textinput">Name</label>
        <div class="col-md-6">
        <%= text_field_tag('host[name]', "Your name here") %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-md-4 control-label" for="selectbasic">How many people can you host?</label>
        <div class="col-md-6">
          <select id="selectbasic" name="host[capacity]" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
            <option value="7">7</option>
            <option value="8">8</option>
          </select>
        </div>
      </div>

<!-- Radio buttons -->
<div class="form-group">
  <label class="col-md-4 control-label" for="radios">Do you smoke?</label>
    <div class="col-md-6">
      <div class="radio">
        <label for="host_smokes_true">
          <%= radio_button_tag('host[smokes]', false, checked = true) %>
          Yes
        </label>
      </div>
      <div class="radio">
        <label for="host_smokes_false">
          <%= radio_button_tag('host[smokes]', true) %>
          No
        </label>
      </div>
    </div>
</div>
<!--  -->

<div class="form-group">
  <label class="col-md-4 control-label" for="radios">Are you allergic to cats?</label>
    <div class="col-md-6">
      <div class="radio">
        <label for="host_cats_true">
          <%= radio_button_tag('host[cats]', false, checked = true) %> No<br>
        </label>
      </div>
      <div class="radio">
        <label for="host_cats_false">
          <%= radio_button_tag('host[cats]', true) %> Yes - I can't stay in a home with cats.
        </label>
      </div>
    </div>
</div>

<!--  -->

<div class="form-group">
  <label class="col-md-4 control-label" for="radios">Are you allergic to dogs?</label>
    <div class="col-md-6">
      <div class="radio">
        <label for="host_dogs_true">
          <%= radio_button_tag('host[dogs]', false, checked = true) %> No, I'm not allergic<br>
        </label>
      </div>
      <div class="radio">
        <label for="host_dogs_false">
          <%= radio_button_tag('host[dogs]', true) %> Yes - I can't stay in a home with dogs
        </label>
      </div>
    </div>
</div>

</div>

<!--  -->

    <div class="form-group">
      <label class="col-md-4 control-label" for="radios">Can you provide your own bedding if needed (e.g. sleeping bag)?</label>
        <div class="col-md-6">
          <div class="radio">
            <label for="host_bedding_true">
              <%= radio_button_tag('host[bedding]', false, checked = true) %> No<br>
            </label>
          </div>
          <div class="radio">
            <label for="host_bedding_false">
              <%= radio_button_tag('host[bedding]', true) %> Yes
            </label>
          </div>
        </div>
    </div>

<!--  -->
    <div class="form-group">
      <label class="col-md-4 control-label" for="radios">Can you provide your own towel if needed?</label>
        <div class="col-md-6">
          <div class="radio">
            <label for="host_towels_true">
              <%= radio_button_tag('host[towels]', true) %> Yes
            </label>
          </div>
          <div class="radio">
            <label for="host_towels_false">
              <%= radio_button_tag('host[towels]', false, checked = true) %> No<br>
            </label>
          </div>
        </div>
    </div>

    <div class="form-group">
      <label class="col-md-4 control-label" for="submit"></label>
        <div class="col-md-6">
          <%= f.submit class: "btn btn-default btn-lg" %>
        </div>
    </div>

  </fieldset>
 <% end %>
  </div>
</div>
